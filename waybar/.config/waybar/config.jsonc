{
	"layer": "top", // Waybar at top layer
	"position": "top", // Waybar position (top|bottom|left|right)
	// "height": 30, // Auto-height is used when commented
	// "width": 1280, // Full screen width when commented
  "margin": 10,
	"spacing": 20, // Gaps between modules (in px)
	// See `man waybar` for more configuration options
	"modules-left": ["sway/workspaces", "sway/window"],
	"sway/workspaces": {
		"disable-scroll": true,
		"all-outputs": true,
		"format": "{icon}",
		"format-icons": {
			"3": "3",
			"4": "4",
			"5": "5",
			"6": "6",
			"7": "7",
			"8": "8",
			"9": "9",
			"10": "10"
		}
	},
	"sway/window": {
		"format": "{}",
		"max-length": 40
	},

	"modules-center": ["custom/music", "sway/mode", "clock"],
	"custom/music": {
		"format": " ğŸ¶  {}",
		"escape": true,
		"interval": 5,
		"tooltip": false,
		"exec": "playerctl metadata --format='{{ artist }} - {{ title }}'",
		"on-click": "alacritty -T cava_popup -e cava",
		"max-length": 40
	},
	"sway/mode": {
		"format": "<b> Mode :</b> <span> {} </span>",
		"tooltip": false
	},
	"clock": {
		"format": " ó°…  {:%H:%M  - %A - %d/%m}",
		"tooltip-format": "ï³ {:%A %m/%d}\n\n<tt><big>{calendar}</big></tt>",
		"calendar": {
			"on-scroll": 1,
			"format": {
				"months": "<span color='#ffead3'><b>{}</b></span>",
				"days": "<span color='#ecc6d9'><b>{}</b></span>",
				"weeks": "<span color='#99ffdd'><b>W{}</b></span>",
				"weekdays": "<span color='#ffcc66'><b>{}</b></span>",
				"today": "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		},
		"actions": {
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
		}
	},

	"modules-right": [
		"custom/keyboard-layout",
		// "idle_inhibitor",
		"network",
		"cpu",
		"memory",
		"pulseaudio#out",
		"pulseaudio#in",
		"backlight",
		"battery",
		"tray",
		"custom/power"
	],
	"custom/keyboard-layout": {
		"exec": "i=$(swaymsg -t get_inputs); echo \"\"; echo \"$i\" | grep -m1 'xkb_active_layout_name' | cut -d '\"' -f4",
		"format": "ï„œ",
		// Interval set only as a fallback; use signal to update the module more immediately
		"interval": 30,
		// See example config for sending signal to Waybar in ~/.config/sway/config.d/input
		"signal": 1,
		"on-click": "~/.config/waybar/scripts/keyhint.sh"
	},
	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": "ï®",
			"deactivated": "ï°"
		},
		"tooltip-format-activated": "Idle Inhibitor Activated",
		"tooltip-format-deactivated": "Idle Inhibitor Deactivated"
	},
	"network": {
		"format-disabled": "ï± Disabled",
		"format-wifi": "ï‡«    {bandwidthDownBits:>} ó°¶¡ {bandwidthUpBits:>} ó°¶£",
		"tooltip-format-wifi": "{essid}",
		"format-ethernet": " {bandwidthDownBits:>} ó°¶¡ {bandwidthUpBits:>} ó°¶£",
		"tooltip-format-ethernet": "{ifname}: {ipaddr}/{cidr}",
		"format-disconnected": "ï± Disconnected",
		"on-click": "",
		"interval": 3
	},
	"cpu": {
		"interval": 5,
		"format": "CPU : {usage:>3}%",
		"states": {
			"warning": 70,
			"critical": 90
		},
		"on-click": "alacritty -T btm_popup -e btm"
	},
	"memory": {
		"interval": 5,
		"format": "RAM : {:>3}%",
		// "on-click": "footclient -T waybar_htop -e htop",
		"on-click": "alacritty -T btm_popup -e btm",
		"states": {
			"warning": 70,
			"critical": 90
		}
	},
	"pulseaudio#out": {
		"format": "{volume}% {icon}",
		"format-muted": "ï‘¦ ",
		"format-icons": {
			"headphones": "ï€¥",
			"handsfree": "ï€¥",
			"headset": "ï€¥",
			"default": ["ï€¦", "ï€§", "ï€¨ "]
		},
		"on-scroll-up": "amixer -q -D pipewire sset Master 5%+",
		"on-scroll-down": "amixer -q -D pipewire sset Master 5%-",
		"on-click": "pavucontrol"
	},
	"pulseaudio#in": {
		"format": "{format_source}",
		"format-source": "{volume}% ï„°",
		"format-source-muted": "ï„±",
		"on-scroll-up": "amixer -q -D pipewire sset Capture 5%+",
		"on-scroll-down": "amixer -q -D pipewire sset Capture 5%-",
		"on-click": "pavucontrol"
	},
	"backlight": {
		"format": "{icon} {percent}%",
		"format-icons": ["ó°„°", "ó°ª", "ó°ªŸ", "ó°ª ", "ó°ª¡", "ó°ª¢", "ó°ª£", "ó°ª¤", "ó°ª¥"],
		"tooltip-format": "Backlight (Scroll): {percent:}%",
		"on-scroll-down": "brightnessctl -c backlight set 5%-",
		"on-scroll-up": "brightnessctl -c backlight set +5%"
	},
	"battery": {
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format": "{icon}   {capacity}%",
		"format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
	},
	"tray": {
		"icon-size": 18,
		"spacing": 20
	},
	"custom/power": {
		"format": "â»",
		"on-click": "wlogout -b 4 -T 400 -B 400",
		"tooltip": false
	}
}
