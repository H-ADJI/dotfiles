{
    // TODO: refactor using https://github.com/H-ADJI/cyborgV2/blob/master/waybar/dot-config/waybar/config.jsonc
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "height": 30, // Auto-height is used when commented
    // "width": 1280, // Full screen width when commented
    "spacing": 10, // Gaps between modules (in px)
    "margin": 10,
    // See `man waybar` for more configuration options
    "modules-left": ["sway/workspaces", "sway/scratchpad", "sway/window"],
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {}
    },
    "sway/window": {
        "format": "{}",
        "max-length": 40
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"]
    },
    "modules-center": ["custom/music", "sway/mode", "clock"],
    "custom/music": {
        "format": " üé∂  {}",
        "escape": true,
        "interval": 5,
        "tooltip": false,
        "exec": "playerctl metadata --format='{{ artist }} - {{ title }}'",
        "on-click": "alacritty -T cava_popup -e cava",
        "max-length": 40
    },
    "sway/mode": {
        "format": "<b> Mode :</b> <span> {} </span>",
        "tooltip": false
    },
    "clock": {
        "format": " Û∞Öê  {:%H:%M  - %A - %d/%m}",
        "tooltip-format": "ÔÅ≥ {:%A %m/%d}\n\n<tt><big>{calendar}</big></tt>",
        "calendar": {
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "modules-right": [
        // "idle_inhibitor",
        "network",
        "cpu",
        "memory",
        "pulseaudio#out",
        "pulseaudio#in",
        "backlight",
        "battery",
        "tray",
        "keyboard-state",
        "custom/power"
    ],
    "keyboard-state": {
        "capslock": true,
        "format": "{icon}",
        "format-icons": {
            "locked": "CAPS",
            "unlocked": ""
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        },
        "tooltip-format-activated": "Idle Inhibitor Activated",
        "tooltip-format-deactivated": "Idle Inhibitor Deactivated"
    },
    "network": {
        "format-disabled": "ÔÅ± Disabled",
        "format-wifi": "Ôá´    {bandwidthDownBits:>} Û∞∂° {bandwidthUpBits:>} Û∞∂£",
        "tooltip-format-wifi": "{essid}",
        "format-ethernet": " {bandwidthDownBits:>} Û∞∂° {bandwidthUpBits:>} Û∞∂£",
        "tooltip-format-ethernet": "{ifname}: {ipaddr}/{cidr}",
        "format-disconnected": "ÔÅ± Disconnected",
        "on-click": "",
        "interval": 3
    },
    "cpu": {
        "interval": 5,
        "format": "CPU : {usage:>3}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "alacritty -T btm_popup -e btm"
    },
    "memory": {
        "interval": 5,
        "format": "RAM : {:>3}%",
        // "on-click": "footclient -T waybar_htop -e htop",
        "on-click": "alacritty -T btm_popup -e btm",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "pulseaudio#out": {
        "format": "{volume}%  üéß",
        "format-muted": "Ôë¶ ",
        "on-scroll-up": "amixer -q -D pipewire sset Master 5%+",
        "on-scroll-down": "amixer -q -D pipewire sset Master 5%-",
        "on-click": "pavucontrol"
    },
    "pulseaudio#in": {
        "format": "{format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "on-scroll-up": "amixer -q -D pipewire sset Capture 5%+",
        "on-scroll-down": "amixer -q -D pipewire sset Capture 5%-",
        "on-click": "pavucontrol"
    },
    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Ñ∞", "Û∞™û", "Û∞™ü", "Û∞™†", "Û∞™°", "Û∞™¢", "Û∞™£", "Û∞™§", "Û∞™•"],
        "tooltip-format": "Backlight (Scroll): {percent:}%",
        "on-scroll-down": "brightnessctl -c backlight set 5%-",
        "on-scroll-up": "brightnessctl -c backlight set +5%"
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}   {capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "tray": {
        "icon-size": 18,
        "spacing": 20
    },
    "custom/power": {
        "format": "‚èª",
        "on-click": "wlogout -b 4 -T 400 -B 400",
        "tooltip": false
    }
}
